{
  "root": true,
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "plugin:node/recommended",
    "plugin:security/recommended"
  ],
  "plugins": [
    "node",
    "security"
  ],
  "env": {
    "commonjs": true,
    "node": true
  },
  "rules": {
    "complexity": [ 1, 10 ],
    "max-len": [
      1,
      {
        "code": 80,
        "ignoreComments": true,
        "ignoreStrings": true,
        "ignoreTrailingComments": true,
        "ignoreTemplateLiterals": true,
        "ignoreUrls": true,
        "tabWidth": 2
      }
    ],
    "node/no-unpublished-require": 0,
    "prefer-const": 2,
    "security/detect-object-injection": 1
  }
}
